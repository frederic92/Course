<div class="project-form">
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <%= form_for @project do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :headline %>
          <%= form.text_field :headline, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :link %>
          <%= form.text_field :link, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :github_repo %>
          <%= form.text_field :github_repo, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.submit "Create a project", class: "form-control btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
